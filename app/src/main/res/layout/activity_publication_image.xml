<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp">
<Space
    android:layout_width="match_parent"
    android:layout_height="20dp"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
android:paddingHorizontal="10dp"
        >
        <ImageView
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@mipmap/portait_boy"/>
        <TextView
            android:paddingStart="10dp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="jack"/>
    </LinearLayout>
    <EditText
        android:paddingHorizontal="10dp"
        android:id="@+id/etImageDespription"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="说出你的感想吧"
        />
   <LinearLayout
       android:paddingStart="10dp"
      android:layout_weight="0.1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <ImageView

           android:id="@+id/ivpublicationContent"
           android:layout_width="100dp"
           android:layout_height="100dp"

           android:background="@mipmap/add_image"
           android:clickable="true" />
       <Space
           android:layout_height="match_parent"
           android:layout_width="match_parent"
           android:layout_weight="3"/>

   </LinearLayout>
<Space
    android:layout_width="match_parent"
    android:layout_height="15dp"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingHorizontal="5dp"
        android:layout_gravity="center">
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <Button

            android:id="@+id/btPublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@drawable/lgbutton"
            android:textSize="20dp"
            android:text="发送"
          />
        <Space
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"/>

</LinearLayout>